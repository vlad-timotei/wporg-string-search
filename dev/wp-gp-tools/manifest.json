{
	"manifest_version":2,
	"name":"WPGP Tools",
	"version":"2.0",
	"description":"Tools for GP usage on WP",
	"permissions":[
		"activeTab",
		"tabs",
		"storage"
	],
	"web_accessible_resources": [
		"js/wp-gp-tools-checks.js",
		"js/wp-gp-tools-snippets.js",
		"js/wp-gp-tools-glossary.js",
		"js/wp-gp-tools-glossary-ro_RO.js",
		"js/wp-gp-tools-settings.js",
		"js/wp-gp-tools-functions.js",
		"img/warning.png",
		"img/notice.png"
	],
	"content_scripts":[
	{
		"matches":[
			"https://translate.wordpress.org/*"
		],
		"js":[
			"js/init.js",
			"js/jquery-3.6.0.min.js",
			"js/wp-gp-tools-search.js"
			],
		"css":[
			"css/wp-gp-tools-style.css"
		]
	}]
}