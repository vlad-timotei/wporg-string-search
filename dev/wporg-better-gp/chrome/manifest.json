{
   "manifest_version":2,
   "name":"Better GlotPress",
   "version":"2.0",
   "description":"Custom GP Settings",
   "permissions":[
      "activeTab",
      "tabs",
      "storage"
   ],
   "web_accessible_resources": [
    "js/wporg-better-gp-checks.js",
    "js/wporg-better-gp-snippets.js",
    "js/wporg-better-gp-search.js",
    "js/wporg-better-gp-functions.js",
    "img/warning.png"
  ],
   "content_scripts":[
      {
         "matches":[
            "https://translate.wordpress.org/*"
         ],
         "js":[
            "js/init.js"
         ],
	"css":[
		"css/wporg-better-gp.css"
	]
      }
   ]
}